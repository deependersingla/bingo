<table id="portfolios" style="float:center;width:400px;height:400px;" border="1" class="table table-bordered table-hover table-condensed" >

	<% @matrix.each do |z| %>
	<tr>
		<% z.each do |x| %>
		<th>
			<% if x == 0 %>
			<% x = "X" %>
			<% end %>
			<% if x == "X" %>
		<h3 style="color:red;">	<%= x%> </h3>
		<% else %>
		<h3 >	<%= x%> </h3>
		<% end %>
		<% end %>
	</th>
	</tr>
	<% end %>
</table>
